<!-- Grade Calculator form -->
<h1>Grade Calculator</h1>
<br />
<p>
    Please enter the percentage scored for each grade category in the form below<br />
    For example: 95.5 or 82
</p>
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="Assignments" /><br />

    <label>Group Project: </label>
    <input id="group" asp-for="Group" /><br />

    <label>Quizzes: </label>
    <input id="quizzes" asp-for="Quizzes"/><br />

    <label>Midterm Exam: </label>
    <input id="midterm" asp-for="Midterm"/><br />

    <label>Final Exam: </label>
    <input id="final" asp-for="Final"/><br />

    <label>INTEX: </label>
    <input id="intex" asp-for="Intex"/><br />
    <br />

    <input style="width: 250px;" type="submit" id="btnSend" value="Calculate My Grade" /> <br /> <br />

    <div asp-validation-summary="All"></div>
</form>

